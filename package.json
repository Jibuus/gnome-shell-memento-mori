{
    "name": "gnome-shell-memento-mori",
    "scripts": {
        "build": "yarn run lock:types && yarn run build:types && yarn run build:ts && yarn run build:extension",
        "clean": "yarn run clean:ts",
        "lock:types": "bash -c 'rm -f docs-lock.json' && yarn run gi-ts config --lock",
        "build:types": "yarn run clean:types && gi-ts generate",
        "clean:types": "bash -c 'rm -rf ./@gi-types'",
        "build:ts": "yarn run clean:ts && rollup -c",
        "clean:ts": "bash -c 'rm -rf dist'",
        "build:extension": "yarn run build:schema",
        "build:schema": "yarn run clean:schema && glib-compile-schemas resources/schemas --targetdir=dist/schemas/",
        "clean:schema": "bash -c 'rm -rf dist/schemas/*.compiled'",
        "build:package": "bash -c 'yarn run build && rm -rf dist/memento-mori@paveloom.zip && cd dist && zip -qr memento-mori@paveloom.zip .'",
        "watch": "yarn run build && yarn run rollup -c --watch",
        "lint": "eslint ."
    },
    "packageManager": "yarn@3.2.3",
    "devDependencies": {
        "@gi-types/clutter10": "^10.0.1",
        "@gi-types/gobject2": "^2.72.1",
        "@gi-types/st1": "^1.0.1",
        "@gi.ts/cli": "^1.5.10",
        "@gi.ts/lib": "^1.5.13",
        "@oclif/errors": "^1.3.5",
        "@oclif/help": "^1.0.1",
        "@rollup/plugin-node-resolve": "^14.1.0",
        "@rollup/plugin-typescript": "^8.5.0",
        "@tsconfig/strictest": "^1.0.1",
        "@typescript-eslint/eslint-plugin": "^5.38.0",
        "@typescript-eslint/parser": "^5.38.0",
        "date-fns": "^2.29.3",
        "eslint": "^8.23.1",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "^2.7.1",
        "rollup": "^2.79.1",
        "rollup-plugin-cleanup": "^3.2.1",
        "rollup-plugin-copy": "^3.4.0",
        "ts-dedent": "^2.2.0",
        "tslib": "^2.4.0",
        "typescript": "^4.8.3"
    }
}
