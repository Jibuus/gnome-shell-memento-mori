{
    "name": "gnome-shell-memento-mori",
    "scripts": {
        "build": "yarn run build:ts && yarn run build:extension",
        "clean": "yarn run clean:ts",
        "build:ts": "yarn run clean:ts && rollup -c",
        "clean:ts": "bash -c 'rm -rf dist'",
        "build:extension": "yarn run build:schema && yarn run gen:locale",
        "build:schema": "yarn run clean:schema && glib-compile-schemas resources/schemas --targetdir=dist/schemas/",
        "clean:schema": "bash -c 'rm -rf dist/schemas/*.compiled'",
        "gen:locale": "yarn run ts-node scripts/generateLocale.ts",
        "build:package": "bash -c 'yarn run build && cd dist && zip -qr memento-mori@paveloom.zip .'",
        "watch": "yarn run build && yarn run rollup -c --watch",
        "lint": "eslint ."
    },
    "packageManager": "yarn@3.2.3",
    "devDependencies": {
        "@gi-types/adw1": "^1.1.1",
        "@gi-types/clutter10": "^10.0.1",
        "@gi-types/gio2": "^2.72.1",
        "@gi-types/glib2": "^2.72.1",
        "@gi-types/gobject2": "^2.72.1",
        "@gi-types/gtk4": "^4.6.1",
        "@gi-types/st1": "^1.0.1",
        "@rollup/plugin-node-resolve": "^14.1.0",
        "@rollup/plugin-typescript": "^8.5.0",
        "@tsconfig/strictest": "^1.0.2",
        "@types/gettext-parser": "^4.0.1",
        "@types/glob": "^8.0.0",
        "@typescript-eslint/eslint-plugin": "^5.38.1",
        "@typescript-eslint/parser": "^5.38.1",
        "date-fns": "^2.29.3",
        "eslint": "^8.24.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "fill-pot-po": "^2.1.10",
        "gettext-extractor": "^3.5.4",
        "gettext-parser": "^6.0.0",
        "glob": "^8.0.3",
        "prettier": "^2.7.1",
        "rollup": "^2.79.1",
        "rollup-plugin-cleanup": "^3.2.1",
        "rollup-plugin-copy": "^3.4.0",
        "ts-dedent": "^2.2.0",
        "ts-node": "^10.9.1",
        "tslib": "^2.4.0",
        "typescript": "^4.8.3"
    }
}
