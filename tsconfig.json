{
    "extends": "@tsconfig/strictest/tsconfig.json",
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "moduleResolution": "Node",
        "noPropertyAccessFromIndexSignature": false,
        "baseUrl": "./src/",
    },
    "ts-node": {
        "files": true,
        "compilerOptions": {
          "module": "CommonJS"
        }
    },
    "include": [
        ".eslintrc.cjs",
        "rollup.config.js",
        "scripts/**/*.ts",
        "src/**/*.ts"
    ],
}
